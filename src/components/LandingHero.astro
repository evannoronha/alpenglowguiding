---
import { Picture } from "astro:assets";
import heroImage from "../images/hero-image.webp";

const imageSize = {
    height: 1080,
    width: 1920
};
---

<style>
    .container {
        position: relative;
        text-align: center;
        color: white;
    }
    .centered {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .darkened-image {
        filter: brightness(0.5);
    }

    @media screen and (max-width: 400px) {
        h1 {
            font-size: 1.5rem;
        }
        h2 {
            font-size: 1rem;
        }
    </style>
    <div class="container">
        <Picture
            src={heroImage}
            alt="Climber at Phun Rock"
            width={imageSize.width}
            height={imageSize.height}
            class="darkened-image"
        />
        <div class="centered">
            <h1>Alpenglow Guiding</h1>
            <h2>Learn to climb high, light and free.</h2>
        </div>
    </div>
