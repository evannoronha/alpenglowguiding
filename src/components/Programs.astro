---
import { Image, Picture } from "astro:assets";
import { getCollection } from "astro:content";

const title = "Our Programs";

const allPrograms = await getCollection("program");
---

<style>
    .programs-container {
        gap: 1rem;
    }
    .program-wrapper {
        float: left;
        width: 33.33%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }
    .program-image {
        width: 175px;
        height: 175px;
        object-fit: cover;
    }

    @media screen and (max-width: 768px) {
        .program-wrapper {
            width: 100%;
            gap: 1rem;
        }

        .program-wrapper p {
            text-align: center;
            margin-top: 0;
        }
    }
</style>
<div>
    <h2>{title}</h2>
    <div class="programs-container">
        {
            allPrograms.map((post: any) => (
                <div class="program-wrapper">
                    <a href={`/programs/${post.id}`}>
                    <Picture
                        src={post.data.photo}
                        alt="${post.data.name} program"
                        width={300}
                        height={300}
                        class="program-image"
                    />
                    </a>
                    <a href={`/programs/${post.id}`}><strong>{post.data.name}</strong></a>
                    <p>{post.data.description}</p>
                </div>
            ))
        }
    </div>
</div>
