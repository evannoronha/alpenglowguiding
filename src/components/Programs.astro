---
import { Picture } from "astro:assets";
import { getCollection } from "astro:content";
import { Debug } from "astro:components";
const title = "Our Programs";

const allPrograms = await getCollection("program").then((posts) =>
    posts.sort((a, b) => a.data.sequenceNumber - b.data.sequenceNumber),
);
---

<style>
    .programs-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }
    .program-wrapper {
        width: 50%;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .program-image-wrapper {
        width: 300px;
        height: 350px;
        overflow: hidden;
    }
</style>
<div>
    <h2>{title}</h2>
    <div class="programs-container">
        {
            allPrograms.map((post: any) => (
                <div class="program-wrapper">
                    <div class="program-image-wrapper">
                        <Picture
                            src={post.data.photos[0]}
                            alt="${post.data.name} program"
                            width={300}
                            height={450}
                            densities={[1, 1.25, 1.5, 1.75, 2]}
                            class="program-image"
                            pictureAttributes={{style: "position: relative;bottom: 15%"}}
                        />
                    </div>
                    <div class="program-details">
                        <a href={`/programs/${post.id}`}>
                            <strong>{post.data.name}</strong>
                        </a>
                        <p>{post.data.description}</p>
                        <p>
                            <em>
                                Prices start at ${post.data.pricePerPerson.slice(-1)[0]}.
                            </em>
                        </p>
                        {/* <Debug data={post.data} /> */}
                    </div>
                </div>
            ))
        }
    </div>
</div>
