---
import { Picture } from "astro:assets";
import { getCollection } from "astro:content";
const title = "Our Programs";

const allPrograms = await getCollection("program").then((posts) =>
    posts.sort((a, b) => a.data.sequenceNumber - b.data.sequenceNumber),
);
---

<style>
    .programs-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }
    .program-wrapper {
        width: 31%;
        padding: 15px;
        margin: 10px;
        display: flex;
    }
    .program-image-wrapper {
        width: 300px;
        height: 350px;
        overflow: hidden;
    }

    .program-wrapper a {
        border: 1px solid black;
        padding: 10px;
        display: inherit;
        flex-direction: column;
        text-decoration: none;
        color: black;
        align-items: center;
        flex-wrap: wrap;
    }

    .program-wrapper a:hover {
        border: 1px solid black 10px;
        box-shadow: 10px 10px 20px rgba(36, 36, 36, 0.5);
        transition: box-shadow 0.3s ease-in-out;
    }

    @media screen and (max-width: 1024px) {
        .program-wrapper {
            width: 47%;
        }
    }

    @media screen and (max-width: 730px) {
        .program-wrapper {
            width: 100%;
        }
        .program-image-wrapper {
           width: 50%;
        }
        .program-wrapper a {
            display: flex;
            flex-direction: row;
        }
        .program-details {
            display: flex;
            width: 50%;
            padding: 10px;
            flex-direction: column;
        }
    }
</style>
<div style="background-color: #99c898; padding: 20px;">
    <h2>{title}</h2>
    <div class="programs-container" >
        {
            allPrograms.map((post: any) => (
                <div class="program-wrapper">
                    <a href={`/programs/${post.id}`}>
                    <div class="program-image-wrapper">
                        <Picture
                            src={post.data.photos[0]}
                            alt="${post.data.name} program"
                            width={300}
                            height={450}
                            densities={[1, 1.25, 1.5, 1.75, 2]}
                            class="program-image"
                            pictureAttributes={{
                                style: "position: relative;bottom: 10%",
                            }}
                        />
                    </div>
                    <div class="program-details">
                        <strong>{post.data.name}</strong>
                        <p>{post.data.description}</p>
                        <p>
                            <em>
                                Prices start at
                                ${post.data.pricePerPerson.slice(-1)[0]}.
                            </em>
                        </p>
                        </a>
                    </div>
                </div>
            ))
        }
    </div>
</div>
