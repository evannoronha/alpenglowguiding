---
import { Image } from "astro:assets";

const title = "Our Programs";

const allPrograms = Object.values(
import.meta.glob("../pages/programs/*.md", { eager: true }),
);
---

<style>
    .programs-container {
        gap: 1rem;
    }
    .program-wrapper {
        float: left;
        width: 33.33%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }
    .program-image {
        width: 175px;
        height: 175px;
        object-fit: cover;
    }
</style>
<div>
    <h2>{title}</h2>
    <div class="programs-container">
        { allPrograms.map((post: any) => (
            <div class="program-wrapper">
                <Image
                src={post.frontmatter.image.src}
                alt={post.frontmatter.image.alt}
                width={100}
                height={100}
                class="program-image"
                />
                <strong>{post.frontmatter.title}</strong>
                <p>{post.frontmatter.description}</p>
            </div>
            ))}
        </div>
    </div>
