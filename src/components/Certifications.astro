---
const title = "Certifications";

import Image from "astro/components/Image.astro";
import nremtLogo from "../images/certifications/nremt_logo.svg";
import amgaLogo from "../images/certifications/amga_logo.png";
import a3Logo from "../images/certifications/a3_logo.png";
const certifications = [
    {
        issuingBody: "National Registry of Emergency Medical Technicians",
        title: "Emergency Medical Technician & Wilderness First Responder",
        image: {
            src: nremtLogo,
            alt: "Logo for the national registry of emergency medical technicians",
        },
    },
    {
        issuingBody: "American Mountain Guides Association",
        title: "Apprentice Rock Guide & Apprentice Alpine Guide",
        image: {
            src: amgaLogo,
            alt: "Logo for the american mountain guides association",
        },
    },
    {
        issuingBody: "American Avalanche Association",
        title: "Recreational Level 2 & Partner Rescue Course",
        image: {
            src: a3Logo,
            alt: "Logo for the american avalanche association",
            style: "filter: invert(1); object-fit: contain;",
        },
    },
];
---

<style>
    .certifications-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }
    .certification {
        width: 33.33%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .certification-image {
        width: 200px;
        height: 200px;
    }
    .certification-text {
        text-align: center;
    }

    @media screen and (max-width: 700px) {
        .certification {
            width: 100%;
        }
    }
</style>
<div id="certification" style="background-color: #99c898; padding: 20px">
    <h2>{title}</h2>
    <div class="certifications-container">
        {
            certifications.map((certification) => (
                <div class="certification">
                    <Image
                        class="certification-image"
                        src={certification.image.src}
                        alt={certification.image.alt}
                        style={certification.image.style}
                        width={200}
                        height={200}
                    />
                    <div class="certification-text">
                        <p>
                            <strong>{certification.issuingBody}</strong>
                        </p>
                        <p>{certification.title}</p>
                    </div>
                </div>
            ))
        }
    </div>
</div>
