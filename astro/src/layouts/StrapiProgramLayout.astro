---
import BaseLayout from "./BaseLayout.astro";
import { Accordion, AccordionItem } from "free-astro-components";
import { parseSectionContent, type StrapiProgram, type ParsedContent } from "../lib/strapi";

interface Props {
    program: StrapiProgram;
}

const { program } = Astro.props;

// Parse all sections from the body
const sections = program.body.map((section) => ({
    header: section.section_header,
    items: parseSectionContent(section.section_content)
}));
---

<style>
    #program-page {
        margin: 0;
        padding: 0;
        background: linear-gradient(to bottom, #f8f9fa 0%, #ffffff 100%);
    }

    /* Hero Section */
    .hero-section {
        position: relative;
        width: 100%;
        height: 60vh;
        min-height: 500px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.7);
    }

    .hero-overlay {
        position: relative;
        z-index: 2;
        text-align: center;
        color: white;
        padding: 2rem;
        max-width: 900px;
    }

    .hero-overlay h1 {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.6);
        letter-spacing: -0.02em;
        line-height: 1.2;
    }

    .hero-overlay p {
        font-size: clamp(1rem, 2vw, 1.3rem);
        line-height: 1.6;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.6);
        font-weight: 300;
    }

    .cta-button {
        display: inline-block;
        padding: 1rem 2.5rem;
        background: #c5a981;
        color: white;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(197, 169, 129, 0.4);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .cta-button:hover {
        background: #b09570;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(197, 169, 129, 0.6);
    }

    /* Image Gallery */
    .image-gallery {
        max-width: 1200px;
        margin: -80px auto 4rem;
        padding: 0 2rem;
        position: relative;
        z-index: 3;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    }

    .gallery-item {
        position: relative;
        overflow: hidden;
        border-radius: 8px;
        aspect-ratio: 4/3;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .gallery-item:hover {
        transform: scale(1.05);
    }

    .gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: filter 0.3s ease;
    }

    .gallery-item:hover img {
        filter: brightness(1.1);
    }

    /* Content Section */
    .content-section {
        max-width: 1200px;
        margin: 0 auto;
        padding: 4rem 2rem;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 3rem;
        text-align: center;
        position: relative;
        padding-bottom: 1rem;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(to right, #c5a981, #e2c091);
        border-radius: 2px;
    }

    /* Enhanced Accordion Styling */
    .program-details-accordion {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .program-details-accordion :global(.accordion) {
        border: none;
    }

    .program-details-accordion :global(.accordion-item) {
        margin-bottom: 1rem;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .program-details-accordion :global(.accordion-item:hover) {
        border-color: #c5a981;
        box-shadow: 0 2px 8px rgba(197, 169, 129, 0.2);
    }

    .program-details-accordion :global(.accordion-header) {
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
        padding: 1.5rem;
        font-size: 1.5rem;
        font-weight: 700;
        color: #2c3e50;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .program-details-accordion :global(.accordion-header:hover) {
        background: linear-gradient(135deg, #c5a981 0%, #e2c091 100%);
        color: white;
    }

    .program-details-accordion :global(.accordion-content) {
        padding: 2rem;
        background: #fafafa;
    }

    .program-details-accordion ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .program-details-accordion li {
        padding: 0.75rem 0;
        padding-left: 2rem;
        position: relative;
        line-height: 1.6;
        color: #495057;
        font-size: 1.05rem;
        border-bottom: 1px solid #e9ecef;
    }

    .program-details-accordion li:last-child {
        border-bottom: none;
    }

    .program-details-accordion li::before {
        content: 'âœ“';
        position: absolute;
        left: 0;
        color: #c5a981;
        font-weight: bold;
        font-size: 1.2rem;
    }

    .section-heading {
        font-size: 1.4rem;
        font-weight: 700;
        color: #2c3e50;
        margin-top: 2rem;
        margin-bottom: 1rem;
        padding-left: 0;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #c5a981;
    }

    .section-heading:first-child {
        margin-top: 0;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .hero-section {
            height: 50vh;
            min-height: 400px;
        }

        .image-gallery {
            margin-top: -40px;
            padding: 0 1rem;
        }

        .gallery-grid {
            grid-template-columns: 1fr;
            padding: 1rem;
        }

        .content-section {
            padding: 2rem 1rem;
        }

        .section-title {
            font-size: 2rem;
        }

        .program-details-accordion {
            padding: 1rem;
        }
    }

    @media (max-width: 480px) {
        .hero-overlay h1 {
            font-size: 1.8rem;
        }

        .hero-overlay p {
            font-size: 1rem;
        }

        .cta-button {
            padding: 0.8rem 2rem;
            font-size: 1rem;
        }
    }
</style>

<BaseLayout title={program.name} description={program.description}>
    <!-- Hero Section with Main Image -->
    <div class="hero-section">
        {program.images && program.images.length > 0 && (
            <img
                src={program.images[0].url}
                alt={program.images[0].alternativeText || program.name}
                class="hero-image"
                loading="eager"
            />
        )}
        <div class="hero-overlay">
            <h1>{program.name}</h1>
            <p>{program.description}</p>
            <a href="#details" class="cta-button">View Details</a>
        </div>
    </div>

    <!-- Image Gallery -->
    {program.images && program.images.length > 0 && (
        <div class="image-gallery">
            <div class="gallery-grid">
                {program.images.map((image) => (
                    <div class="gallery-item">
                        <img
                            src={image.formats?.medium?.url || image.url}
                            alt={image.alternativeText || program.name}
                            loading="lazy"
                        />
                    </div>
                ))}
            </div>
        </div>
    )}

    <!-- Program Details Section -->
    <div class="content-section" id="details">
        <h2 class="section-title">Program Details</h2>
        <div class="program-details-accordion">
            <Accordion>
                {sections.map((section) => (
                    <AccordionItem title={section.header}>
                        <div>
                            {section.items.map((item: ParsedContent) => (
                                item.type === 'heading' ? (
                                    <h3 class="section-heading">{item.text}</h3>
                                ) : (
                                    <ul style="list-style: none; padding: 0; margin: 0;">
                                        <li>{item.text}</li>
                                    </ul>
                                )
                            ))}
                        </div>
                    </AccordionItem>
                ))}
            </Accordion>
        </div>
    </div>
</BaseLayout>
