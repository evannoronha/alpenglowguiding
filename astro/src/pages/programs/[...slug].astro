---
import { getCollection, render } from "astro:content";
import MarkdownProgramLayout from "../../layouts/MarkdownProgramLayout.astro";

export const prerender = true;

export async function getStaticPaths() {
    const posts = await getCollection("program");
    return posts.map((post) => ({
        params: { slug: post.id },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<MarkdownProgramLayout frontmatter={post.data}>
    <Content />
</MarkdownProgramLayout>
